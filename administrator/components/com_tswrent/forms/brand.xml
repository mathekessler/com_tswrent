<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="TSWEB\Component\Tswrent\Administrator\Field">
	
	<fieldset name="title_alias">
		<field 
			name="title" 
			type="text"
			size="40"
			label="JGLOBAL_TITLE"
			required="true"
		/>
		<field 
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
	</fieldset>

	<fieldset name="details">
		<field 
			name="description"
			type="textarea"
			label="COM_TSWRENT_FIELD_DESCRIPTION"
		/>
		<field 
			name="webpage" 
			type="url" 
			default="http://www.example.com" 
			label="COM_TSWRENT_FIELD_WEBPAGE"  
			filter="url"
			validate="url"
		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			default="1"
			class="form-select-color-state"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>		
	</fieldset>

	<fieldset name="supplier">

		<field
				name="supplier_ids"
				type="subform"
				label="COM_TSWRENT_FIELD_SUPPLIER"
				default=""
				multiple="true"
				layout="joomla.form.field.subform.repeatable"
				>
				<form>
					<fieldset>
						<field 
						name="supplier_id" 
						type="suppliers"	
						/>
					</fieldset>
				</form>
			</field>
	</fieldset>

	<fieldset name="publish">
		<field 
			name="id" 
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL"
		/>	
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>
		<field
			name="created_by_alias"
			type="text"
			label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
		/>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
			validate="UserId"
		/>

		<field
			name="ordering"
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			content_type="com_contact.contact"
		/>

	</fieldset>

</form>