<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="TSWEB\Component\Tswrent\Administrator\Field">
	
	<fieldset name="title_alias">
		<field 
			name="title" 
			type="text"
			size="40"
			label="COM_TSWRENT_FIELD_PROJECT_NAME"
			required="true"
		/>
		<field 
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
	</fieldset>

	<fieldset name="details">

		<field 
			name="description"
			type="textarea"
			label="COM_TSWRENT_FIELD_DESCRIPTION"
		/>
		<field 
			name="contact"
			type="contact"
			contacttype= "tswrent"
			label="COM_TSWRENT_FIELD_CONTACTS"
		/>
		<field 
			name="customer"
			type="customer"
			onchange='c_contact()'
			label="COM_TSWRENT_FIELD_ORDER_CUSTOMER"
		/>
		<field 
			name="c_contact"
			type="contact"
			contacttype= "order"
			label="COM_TSWRENT_CUSTOMER_CONTACTS"
			required="true"
			showon= 'customer!:0'
		>
		<option value="0">COM_TSWRENT_ORDER_CUSTOMER_FIRST_SELECT</option>
		</field>
		
		<fields name = "event_address">
			<fieldset>
				<field 
					name="address" 
					type="text" 		
					label="COM_TSWRENT_FIELD_ADDRESS" 
				/>
				<field 
					name="city" 
					type="text"			
					label="COM_TSWRENT_FIELD_CITY" 
				/>
				<field 
					name="postalcode" 
					type="text"	
					default='0000'		
					label="COM_TSWRENT_FIELD_POSTALCODE" 
				/>
			</fieldset>
		</fields>
		<field
			name="startdate"
			type="calendar"
			label="COM_TSWRENT_START_DATE"
			translateformat="true"
			showtime="true"
			filter="user_utc"
			onchange='calcDays()'
		/>		
		<field
			name="enddate"
			type="calendar"
			label="COM_TSWRENT_END_DATE"
			translateformat="true"
			showtime="true"
			filter="user_utc"
			onchange='calcDays()'
		/>
		<field
			name="days"
			type="hidden"
			readonly="true"
			label="COM_TSWRENT_FIELD_DAYS"
			onchange='calcHours()'
		/>
		<field
			name="hours"
			type="hidden"
			readonly="true"
			label="COM_TSWRENT_FIELD_HOURS"
		/>

		<field
			name="orderstate"
			type="list"
			label="COM_TSWRENT_FIELD_ORDER_STATE"
			default="0"
			validate="options"
			>
			<option value="0">COM_TSWRENT_ORDER_STATUS_OFFER</option>
			<option value="1">COM_TSWRENT_ORDER_STATUS_ORDERED</option>
			<option value="2">COM_TSWRENT_ORDER_STATUS_INVOICE</option>
			<option value="3">COM_TSWRENT_ORDER_CLOSED</option>

		</field>
	</fieldset>
	<fieldset name="products">
		<field 
			name="graduation"
			type="graduation"
			onload='getFactor()'
			onchange='getFactor()'
			label="COM_TSWRENT_FIELD_GRADUATION"
		/>
		<field
			name="factor"
			type="text"
			readonly="true"
			class="readonly"
			onchange='calcPrice()'
			label="COM_TSWRENT_FIELD_GRADUATION_FACTOR"
		/>
					<field 
				name="product_title"
				type="products"
				label="COM_TSWRENT_TITLE"	
			/>
			<field 
				name="id"
				type="hidden"
				label="COM_TSWRENT_TITLE"	
			/>
			<field 
				name="description"
				type="text"
				label="COM_TSWRENT_DESCRIPTION"
			/>
			<field 
				name="price"
				type="text"
				readonly= "true"
				label="COM_TSWRENT_PRICE"
			/>		
			<field
				name="unit"
				type= "hidden"
				label="COM_TSWRENT_UNIT"
			/>
			<field
				name="stock"
				type= "stock"
				label="COM_TSWRENT_STOCK"
			/>
			<field
				name="discount"
				type="number"
				default="0"
				onchange="calcPrice()"
				step="0.5"
			/>
			<factor
				name="price_total"
				type="text"
				readonly="true"
			/>
	</fieldset>
	
	<fieldset name="publish">

		<field 
			name="id" 
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL"
		/>
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
		/>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
			validate="UserId"
		/>


		<field
			name="ordering"
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			content_type="com_contact.contact"
		/>


	</fieldset>

</form>