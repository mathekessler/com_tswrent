<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="TSWEB\Component\Tswrent\Administrator\Field">
	
	<fieldset name="title_alias">
		
		<field 
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field 
			name="title" 
			type="text"
			size="40"
			label="JGLOBAL_TITLE"
			required="true"
		/>

		<field 
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>

	</fieldset>

	<fieldset name="details">
		
		<field
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			extension="com_tswrent"
			required="true"
			addfieldprefix="Joomla\Component\Categories\Administrator\Field"
			default=""
			class="advancedSelect"
		/>

		<field 
			name="description"
			type="textarea"
			label="COM_TSWRENT_FIELD_DESCRIPTION"
		/>

		<field 
			name="brand_id" 
			type="brand"
			label="COM_TSWRENT_BRAND"
			validate="options"
			hint="JOPTION_SELECT">	
		</field>

		<field 
			name="price"
			type="number"
			label="COM_TSWRENT_FIELD_PRICE"
			step="0.05"
			required="true"
		/>

		<field
			name="unit"
			type="list"
			label="COM_TSWRENT_FIELD_UNIT"
			default="0"	
			>
			<option value="0">COM_TSWRENT_PER_DAY</option>
			<option value="1">COM_TSWRENT_PER_HOUR</option>
			<option value="2">COM_TSWRENT_PER_PIECE</option>
		</field>

		<field
			name="consumable"
			type="checkbox"
			label="COM_TSWRENT_FIELD_CONSUMABLE"
		/>

		<field 
			name="weight"
			type="number"
			step="0.1"
			default="0"
			label="COM_TSWRENT_FIELD_WEIGHT"
		/>

		<field 
			name="stock"
			type="number"
			label="COM_TSWRENT_FIELD_STOCK"
			default= "0"
		/>

		<field 
			name="productimage" 
			type="media"
			required="false"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			default="1"
			class="form-select-color-state"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>

	<fieldset name="publish" label="COM_TSWRENT_GROUP_LABEL_PUBLISHING_DETAILS">

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
			validate="UserId"
		/>

	</fieldset>

</form>