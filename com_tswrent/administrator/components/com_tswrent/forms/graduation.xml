<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="TSWEB\Component\Tswrent\Administrator\Field">
	
	<fieldset name="title_alias">
		<field 
			name="title" 
			type="text"
			size="40"
			label="JGLOBAL_TITLE"
			required="true"
		/>
		<field 
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
	</fieldset>

	<fieldset name="details">
		<field 
			name="description"
			type="textarea"
			label="COM_TSWRENT_FIELD_DESCRIPTION"
		/>
		<field
			name="graduations"
			type="subform"
			label="COM_TSWRENT_FIELD_CUSTOMER"
			default=""
			multiple="true"
			layout="joomla.form.field.subform.repeatable-table"
			>
			<form>
				<fieldset>
					<field 
						name="duration"
						type="number"
						step="1"
						required="true"
						onchange= "calcDays(this.id)"
						label="COM_TSWRENT_RENT_DURATION"

					/>
					
					<field 
						name="unit" 
						type="list"
						label="COM_TSWRENT_FIELD_UNIT"
						onchange="calcDays(this.id)"
						validate="options"	
						>
						<option value="1">COM_TSWRENT_PER_DAY</option>
						<option value="0">COM_TSWRENT_PER_WEEK</option>
					</field>
					<field 
						name="factor"
						type="number"
						label="COM_TSWRENT_FIELD_FACTOR"
						step="0.5"
						required="true"
					/>
					<field 
						name="days"
						type="hidden"
					/>
				</fieldset>
			</form>
		</field>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			default="1"
			class="form-select-color-state"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>

	
	<fieldset name="publish">

		<field 
			name="id" 
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL"
		/>
		
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
		/>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
			validate="UserId"
		/>

		<field
			name="ordering"
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			content_type="com_contact.contact"
		/>
		
		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>

	</fieldset>

</form>