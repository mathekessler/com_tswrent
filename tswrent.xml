<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" method="upgrade">
	<name>COM_TSWRENT</name>
	<creationDate>30.07.2023</creationDate>
	<author>Mathe Kessler</author>
	<authorUrl>tonschmiede.ch</authorUrl>
	<copyright>[COPYRIGHT]</copyright>
	<license>GNU General Public License version 2 or later;</license>
	<version>__BUMP_VERSION__</version>
	<description>COM_TSWRENT_INSTALLATION_DESCRIPTION</description>
	
	<namespace path="src">TSWEB\Component\Tswrent</namespace>
	
	<scriptfile>script.php</scriptfile>
	
	<media destination="com_tswrent" folder="media/com_tswrent">
		<folder>images</folder>
		<folder>css</folder>
		<folder>js</folder> 
	</media>
	
	<install folder="administrator/components/com_tswrent"> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall folder="administrator/components/com_tswrent"> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Back-end files -->
	<administration>
		
		<!-- Menu entries -->
		<menu img="class:address-book">COM_TSWRENT</menu>
		<submenu>
			<menu link="option=com_tswrent" img="class:products"
				alt="Tswrent/Products">COM_TSWRENT_PRODUCTS</menu>
			<menu link="option=com_categories&amp;extension=com_tswrent"
					img="class:address-book">JCATEGORY</menu>
			<menu
				link="option=com_tswrent&amp;view=orders"
				view="orders"
				img="class:tswrent-orders"
				alt="Tswrent/Orders"
				>
				COM_TSWRENT_ORDERS
			</menu>


		</submenu>
		
		<files folder="administrator/components/com_tswrent">
			<filename>access.xml</filename>
			<folder>forms</folder>
			<folder>services</folder>
			<folder>sql</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
		</files>

		
		<languages folder="administrator/language">
			<language tag="en-GB">en-GB/com_tswrent.ini</language>
			<language tag="en-GB">en-GB/com_tswrent.sys.ini</language>
		</languages>

	</administration>
</extension>
